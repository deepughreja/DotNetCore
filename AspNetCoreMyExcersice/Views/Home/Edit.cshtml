@model EmployeeEditViewModel
@{
    ViewBag.Title = "Edit Employee";
    var photoPath = "~/Images/" + (Model.ExistingPhotoPath ?? "1.png");
}
<link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
<h3>Create</h3>
<form enctype="multipart/form-data" asp-controller="Home" asp-action="Edit" method="post">
    <input hidden asp-for="Id" />
    <input hidden asp-for="ExistingPhotoPath" />
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="@Model.Name"></label>
        <div class="col-sm-6">
            <input class="form-control" asp-for="@Model.Name" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="@Model.Email"></label>
        <div class="col-sm-6">
            <input class="form-control" asp-for="@Model.Email" />
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="@Model.Photo"></label>
        <div class="col-sm-6">
            <div>
                <input class="form-control" asp-for="@Model.Photo" />
            </div>
        </div>
    </div>
    <div class="form-group row col-sm-4 offset-2">
        <img src="@photoPath" class="ImageThumbnail" asp-append-version="true" />
    </div>
    <div>
        <button class="btn btn-primary" type="submit">Update</button>
    </div>

</form>

