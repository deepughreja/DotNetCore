<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/Site.css" rel="stylesheet" />
    <style>
        .dropdown:hover .dropdown-menu {
            display: block;
            margin-top: 0;
        }

        .dropdown-menu > a:hover, .dropdown-menu > a:focus {
            background-image: none !important;
        }

        .dropdown-menu > a:hover, .dropdown-menu > a:focus {
            background-color: #2f9167;
        }

        .navbar-dark .navbar-nav .nav-link {
            color: white;
        }

        .custom-bg {
            background-color: #2f9167 !important
        }
    </style>
</head>
<body>
    <div>
        <nav class="navbar navbar-expand-sm custom-bg navbar-dark">
            <a class="navbar-brand">
                <img src="~/images/Test.png" height="30" width="30" />
            </a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a asp-action="Register" asp-controller="Account" class="nav-link custom-text-color">Register</a>
                    </li>
                    <li class="nav-item">
                        <a asp-action="Login" asp-controller="Account" class="nav-link custom-text-color">Login</a>
                    </li>
                </ul>
            </div>

        </nav>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    @RenderSection("Scripts", false)
</body>
</html>